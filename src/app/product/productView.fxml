<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import com.jfoenix.validation.RequiredFieldValidator?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import java.lang.String?>

<StackPane fx:id="root" prefHeight="1120.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.product.ProductController">
	<children>
		<VBox alignment="CENTER" prefHeight="433.0" prefWidth="772.0">
			<children>
				<VBox fx:id="btnVbox" alignment="TOP_CENTER" prefHeight="103.0" prefWidth="940.0">
					<children>
						<HBox layoutX="10.0" layoutY="165.0" prefWidth="478.0" spacing="10.0">
							<children>
								<Button fx:id="addProductBtn" mnemonicParsing="false" prefHeight="54.0" prefWidth="121.0" styleClass="btn-primary" text="+ Add Product">
									<font>
										<Font size="14.0" />
									</font>
								</Button>
								<Button fx:id="ediProductBtn" mnemonicParsing="false" prefHeight="54.0" prefWidth="121.0" styleClass="btn-secondary" text="Edit Product">
									<font>
										<Font size="14.0" />
									</font>
								</Button>
								<Button fx:id="deleteProductBtn" layoutX="626.0" layoutY="10.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="121.0" styleClass="btn-danger" text="- Delete Product">
									<font>
										<Font name="System Bold" size="14.0" />
									</font>
								</Button>
								<TextField fx:id="searchField" prefHeight="27.0" prefWidth="272.0" promptText="Search..." />
							</children>
						</HBox>
					</children>
					<VBox.margin>
						<Insets bottom="10.0" top="10.0" />
					</VBox.margin>
				</VBox>
				<TableView fx:id="tableView" prefHeight="874.0" prefWidth="940.0">
					<columns>
						<TableColumn fx:id="c1" editable="false" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="#">
						</TableColumn>
						<TableColumn fx:id="c2" editable="false" minWidth="100.0" prefWidth="300.0" text="Product Name">
						</TableColumn>
						<TableColumn fx:id="c3" editable="false" minWidth="100.0" prefWidth="200.0" text="Product Description">
						</TableColumn>
						<TableColumn fx:id="c4" editable="false" maxWidth="1500.0" minWidth="100.0" prefWidth="150.0" text="Avail. Quantity">
						</TableColumn>
						<TableColumn fx:id="c5" editable="false" maxWidth="1500.0" minWidth="100.0" prefWidth="150.0" text="Price">
						</TableColumn>

					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
			</children>
			<padding>
				<Insets bottom="10.0" left="30.0" right="30.0" />
			</padding>
		</VBox>
	</children>
	<JFXDialog fx:id="productDialog">
		<JFXDialogLayout style="-fx-background-color:#fff">
			<heading>
				<Label prefHeight="38.0" prefWidth="200.0" text="Add Product">
					<styleClass>
						<String fx:value="h3" />
						<String fx:value="title" />
					</styleClass>
				</Label>
			</heading>
			<body>
				<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10" alignment="CENTER">
					<children>
						<JFXTextField fx:id="productNameField" promptText="Product Name" labelFloat="true" style="-fx-background-color:#eeeeee">
							
						</JFXTextField>
						<Label fx:id="lbl_pname_err" styleClass="text-danger" text="Product Name Required" />
						<JFXTextArea fx:id="productDescField" promptText="Product Description" labelFloat="true" maxHeight="50" minHeight="50" style="-fx-background-color:#eeeeee">
							
						</JFXTextArea>
						<JFXTextField fx:id="productQtyField" promptText="Available Quantity" labelFloat="true" style="-fx-background-color:#eeeeee">
							
						</JFXTextField>
						<Label fx:id="lbl_pqty_err" styleClass="text-danger" text="Product Quantity Required" />
						<JFXTextField fx:id="productPriceField" promptText="Product Price" labelFloat="true" style="-fx-background-color:#eeeeee">
							
						</JFXTextField>
						<Label fx:id="lbl_pprice_err" styleClass="text-danger" text="Product Price Required" />
						<JFXButton fx:id="saveProductButton" styleClass="dialog-accept">Save Product
						</JFXButton>
					</children>
				</VBox>
			</body>
			<actions>

			</actions>
		</JFXDialogLayout>
	</JFXDialog>


	<JFXDialog fx:id="productDeleteConfirmDialog">
		<JFXDialogLayout style="-fx-background-color:#fff">
			<heading>
				<Label prefHeight="38.0" prefWidth="400.0" text="Are you sure want to delete this Product ?">
					<styleClass>
						<String fx:value="h4" />
						<String fx:value="title" />
					</styleClass>
				</Label>
			</heading>
			<body>
				<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20" alignment="CENTER_RIGHT">
					<children>

						<Button fx:id="dontDeleteProductBtn" onAction="#closeConfirmDialog" mnemonicParsing="false" prefHeight="54.0" prefWidth="121.0" styleClass="btn-info" text="Don't Delete">
							<font>
								<Font size="14.0" />
							</font>
						</Button>
						<Button fx:id="confirmDeleteProductBtn" onAction="#deleteConfirmFromDialog" mnemonicParsing="false" prefHeight="54.0" prefWidth="121.0" styleClass="btn-danger" text="Delete Now">
							<font>
								<Font size="14.0" />
							</font>
						</Button>
					</children>
				</HBox>
			</body>
			<actions>

			</actions>
		</JFXDialogLayout>
	</JFXDialog>

	<stylesheets>
		<URL value="@../../com/gn/theme/css/material-color.css" />
		<URL value="@../../com/gn/theme/css/skeleton.css" />
		<URL value="@../../com/gn/theme/css/light.css" />
		<URL value="@../../com/gn/theme/css/bootstrap.css" />
		<URL value="@../../com/gn/theme/css/simple-green.css" />
		<URL value="@../../com/gn/theme/css/shape.css" />
		<URL value="@../../com/gn/theme/css/typographic.css" />
		<URL value="@../../com/gn/theme/css/helpers.css" />
		<URL value="@../../com/gn/theme/css/master.css" />
	</stylesheets>
</StackPane>
