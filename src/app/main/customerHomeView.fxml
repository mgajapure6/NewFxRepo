<StackPane fx:id="spRoot" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.main.CustomerHomeController">
	<children>
		<TabPane style="-fx-tab-min-width: 100;">
			<tabs>
				<Tab fx:id="productsTab" closable="false" text="Products">
					<content>
						<BorderPane>
							<center>
								<ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
									<content>

									</content>
									<content>
										<VBox>
											<children>
												<HBox>
													<children>
														<HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
															<children>
																<TextField promptText="Search Product..." HBox.hgrow="ALWAYS">
																	<font>
																		<Font size="15.0" />
																	</font>
																</TextField>
															</children>
														</HBox>
														<HBox>
															<children>
																<!-- <JFXBadge fx:id="cartBadge" position="TOP_RIGHT" styleClass="icons-badge" text="0"> <children> <FontAwesomeIconView fill="#5e5e5e" glyphName="SHOPPING_BAG" size="30" /> </children> </JFXBadge> -->
																<JFXBadge fx:id="cartBadge" alignment="TOP_LEFT" onMouseClicked="#openCart" prefHeight="44.0" prefWidth="35.0" style="-fx-border-color: #ccc;-fx-font-size : 16px;" text="0">
																	<!-- <styleClass> <String fx:value="icon" /> <String fx:value="icon-warning" /> </styleClass> -->
																	<control>
																		<StackPane prefHeight="32.0" prefWidth="43.0" style="-fx-padding: 10;">
																			<children>
																				<FontAwesomeIconView glyphName="SHOPPING_BAG" size="20" styleClass="icon" StackPane.alignment="CENTER" />
																			</children>
																		</StackPane>
																	</control>
																	<styleClass>
																		<String fx:value="text-18" />
																		<String fx:value="depth-1" />
																		<String fx:value="icon" />
																		<String fx:value="text-white" />
																		<String fx:value="rounded" />
																	</styleClass>
																</JFXBadge>
															</children>
															<padding>
																<Insets left="10.0" right="10.0" />
															</padding>
														</HBox>
													</children>
													<VBox.margin>
														<Insets bottom="5.0" left="5.0" top="5.0" />
													</VBox.margin>
												</HBox>
												<JFXListView fx:id="productListView" depth="1" verticalGap="10.0" VBox.vgrow="ALWAYS" />
											</children>
										</VBox>
									</content>
									<BorderPane.margin>
										<Insets right="20.0" />
									</BorderPane.margin>
								</ScrollPane>
							</center>
							<left>
								<ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
							</left>
						</BorderPane>
					</content>
				</Tab>
				<Tab closable="false" text="Suppliers" />
			</tabs>
		</TabPane>
	</children>
	<stylesheets>
		<URL value="@../../com/gn/theme/css/material-color.css" />
		<URL value="@../../com/gn/theme/css/skeleton.css" />
