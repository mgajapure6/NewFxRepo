<StackPane fx:id="spRoot" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.main.CustomerHomeController">
	<children>
		<TabPane style="-fx-tab-min-width: 100;">
			<tabs>
				<Tab fx:id="productsTab" closable="false" text="Products">
					<content>
						<BorderPane>
							<center>
								<VBox fx:id="listAppenderVbox">
									<children>
										<HBox>
											<children>
												<HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
													<children>
														<TextField promptText="Search Product..." HBox.hgrow="ALWAYS">
															<font>
																<Font size="15.0" />
															</font>
														</TextField>
													</children>
												</HBox>
												<HBox>
													<children>
														<!-- <JFXBadge fx:id="cartBadge" position="TOP_RIGHT" styleClass="icons-badge" text="0"> <children> <FontAwesomeIconView fill="#5e5e5e" glyphName="SHOPPING_BAG" size="30" /> </children> </JFXBadge> -->
														<JFXBadge fx:id="cartBadge" alignment="TOP_LEFT" onMouseClicked="#openCart" prefHeight="44.0" prefWidth="35.0" style="-fx-border-color: #ccc;-fx-font-size : 16px;" text="0">
															<!-- <styleClass> <String fx:value="icon" /> <String fx:value="icon-warning" /> </styleClass> -->
															<control>
																<StackPane prefHeight="32.0" prefWidth="43.0" style="-fx-padding: 10;">
																	<children>
																		<FontAwesomeIconView glyphName="SHOPPING_BAG" size="20" styleClass="icon" StackPane.alignment="CENTER" />
																	</children>
																</StackPane>
															</control>
															<styleClass>
																<String fx:value="text-18" />
																<String fx:value="depth-1" />
																<String fx:value="icon" />
																<String fx:value="text-white" />
																<String fx:value="rounded" />
															</styleClass>
														</JFXBadge>
													</children>
													<padding>
														<Insets left="10.0" right="10.0" />
													</padding>
												</HBox>
											</children>
											<VBox.margin>
												<Insets bottom="5.0" left="5.0" top="5.0" />
											</VBox.margin>
										</HBox>
										<!-- <JFXListView fx:id="productListView" depth="1" verticalGap="10.0" VBox.vgrow="ALWAYS" /> -->
									</children>
								</VBox>
							</center>
							<left>
								<ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
							</left>
						</BorderPane>
					</content>
				</Tab>
				<Tab closable="false" text="Suppliers" />
			</tabs>
		</TabPane>

	</children>

	<JFXDialog fx:id="cartDialog">
		<JFXDialogLayout style="-fx-background-color:#fff" prefWidth="750.0">
			<heading>
				<Label prefHeight="38.0" prefWidth="700.0" text="Cart Products">
					<styleClass>
						<String fx:value="h4" />
						<String fx:value="title" />
					</styleClass>
				</Label>
			</heading>
			<body>
				<BorderPane fx:id="cartListAppenderBorderPane" prefWidth="750.0">
					<center>
						<!-- <ScrollPane fx:id="cartListAppenderScrollPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"> <content> <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" /> </content> </ScrollPane> -->
					</center>
					<bottom>
						<HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
							<children>
								<Button text="Buy Now" styleClass="btn-success" prefWidth="150.0">
									<font>
										<Font name="System Bold" size="23.0" />
									</font>
								</Button>
							</children>
							<padding>
								<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
							</padding>
						</HBox>
					</bottom>
				</BorderPane>
			</body>
		</JFXDialogLayout>
	</JFXDialog>

	<stylesheets>
		<URL value="@../../com/gn/theme/css/material-color.css" />
		<URL value="@../../com/gn/theme/css/skeleton2.css" />
		<URL value="@../../com/gn/theme/css/light.css" />
		<URL value="@../../com/gn/theme/css/bootstrap.css" />
		<URL value="@../../com/gn/theme/css/shape.css" />
		<URL value="@../../com/gn/theme/css/typographic.css" />
		<URL value="@../../com/gn/theme/css/helpers.css" />
		<URL value="@../../com/gn/theme/css/master.css" />
		<URL value="@../../com/gn/theme/css/newCss.css" />
	</stylesheets>
</StackPane>
